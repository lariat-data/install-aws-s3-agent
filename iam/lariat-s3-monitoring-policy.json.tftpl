{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor6",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject"
            ],
            "Resource": [
		%{ for s3_bucket in s3_buckets ~}
                "arn:aws:s3:::${s3_bucket}/*",
                "arn:aws:s3:::${s3_bucket}",
                %{ endfor ~}
                "arn:aws:s3:::${s3_agent_config_bucket}/*",
                "arn:aws:s3:::${s3_agent_config_bucket}"
            ]
	}
    ]
}
